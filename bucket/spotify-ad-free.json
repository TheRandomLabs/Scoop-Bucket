{
    "homepage": "https://github.com/CHEF-KOCH/Spotify-Ad-free",
    "description": "An ad-free version of Spotify, the popular digital music service.",
    "license": "Proprietary",
    "version": "1.1.4.197",
    "url": "https://github.com/CHEF-KOCH/Spotify-Ad-free/releases/download/1.1.4.197.g92d52c4f/Spotify.1.1.4.197.Ad-Free.zip",
    "hash": "b1f9847beeb04ebea9245093c7093dae350c7f6825f7fb1141e582e9718b20fa",
    "pre_install": [
        "$spotify_killed = $false",
        "Get-Process -Name \"*Spotify*\" | ForEach-Object {",
        "    Stop-Process $_",
        "    $spotify_killed = $true",
        "}",
        "",
        "if($spotify_killed) {",
        "    Start-Sleep -Seconds 4",
        "}",
        "",
        "Remove-Item $dir\\*.cmd | Out-Null"
    ],
    "installer": {
        "file": "Spotify 1.1.4.197 Ad-Free.exe",
        "args": [
            "/verysilent",
            "/portapro",
            "/DIR=$dir"
        ]
    },
    "shortcuts": [
        [
            "App\\ProgramFiles\\Spotify.exe",
            "Spotify"
        ]
    ],
    "uninstaller": {
        "script": [
            "$spotify_killed = $false",
            "Get-Process -Name \"*Spotify*\" | ForEach-Object {",
            "    Stop-Process $_",
            "    $spotify_killed = $true",
            "}",
            "",
            "if($spotify_killed) {",
            "    Start-Sleep -Seconds 4",
            "}",
            "Start-Process -Wait \"$($dir)\\App\\ProgramFiles\\Spotify.exe\" -ArgumentList \"/Uninstall\", \"/Silent\""
        ]
    }
}
