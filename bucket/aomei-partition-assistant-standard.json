{
    "version": "8.7",
    "description": "Disk partition tool.",
    "homepage": "https://www.disk-partition.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.disk-partition.com/eula/pa-standard.pdf"
    },
    "url": "http://www2.aomeisoftware.com/download/pa/PAssist_Std.exe",
    "hash": "8fab47a527eb3d88aafe417bedf5f029026cea9637c291849e1a92e91b98782c",
    "pre_install": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to install $app.\"",
        "    exit 1",
        "}",
        "",
        "Start-Job {",
        "    do {",
        "        Start-Sleep -Milliseconds 250",
        "        $partassist_process = Get-Process | Where-Object { $_.name -eq 'PartAssist' }",
        "    } while ($partassist_process -eq $null)",
        "",
        "    $partassist_process | ForEach-Object { Stop-Process -Id $_.Id }",
        "} | Out-Null"
    ],
    "installer": {
        "args": [
            "/VERYSILENT",
            "/SUPPRESSMSGBOXES",
            "/NORESTART",
            "/SP-",
            "/DIR=$dir"
        ]
    },
    "post_install": [
        "Remove-Item -Recurse -Path \"$env:ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\AOMEI Partition Assistant Standard Edition *\"",
        "Remove-Item -Recurse -Path \"$env:HOMEDRIVE\\Users\\Public\\Desktop\\AOMEI Partition Assistant Standard Edition $version.lnk\""
    ],
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/VERYSILENT",
            "/SUPPRESSMSGBOXES",
            "/NORESTART",
            "/SP-"
        ]
    },
    "bin": "PartAssist.exe",
    "shortcuts": [
        [
            "PartAssist.exe",
            "AOMEI Partition Assistant Standard"
        ]
    ],
    "checkver": {
        "url": "https://www.disk-partition.com/download-home.html",
        "regex": " \\| v([\\d+.]+)<"
    },
    "autoupdate": {
        "url": "http://www2.aomeisoftware.com/download/pa/PAssist_Std.exe"
    }
}
