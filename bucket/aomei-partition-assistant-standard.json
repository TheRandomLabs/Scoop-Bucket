{
    "version": "8.5",
    "description": "A free and safe disk partition tool.",
    "homepage": "https://www.disk-partition.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.disk-partition.com/eula/pa-standard.pdf"
    },
    "url": "http://www2.aomeisoftware.com/download/pa/PAssist_Std.exe",
    "hash": "4503a9bae4961d3178cfb2c38f382734a7abaa3f7bf8972597331fa74a63632c",
    "pre_install": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to install $app.\"",
        "    exit 1",
        "}",
        "",
        "Start-Job {",
        "    do {",
        "        Start-Sleep -Milliseconds 250",
        "        $partassist_process = Get-Process | Where-Object { $_.name -eq 'PartAssist' }",
        "    } while ($partassist_process -eq $null)",
        "",
        "    $partassist_process | ForEach-Object { Stop-Process -Id $_.Id }",
        "} | Out-Null"
    ],
    "installer": {
        "args": [
            "/VERYSILENT",
            "/SUPPRESSMSGBOXES",
            "/NORESTART",
            "/SP-",
            "/DIR=$dir"
        ]
    },
    "post_install": "Remove-Item -Recurse -Path \"$env:PROGRAMDATA\\Microsoft\\Windows\\Start Menu\\Programs\\AOMEI Partition Assistant Standard Edition *\"",
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/VERYSILENT",
            "/SUPPRESSMSGBOXES",
            "/NORESTART",
            "/SP-"
        ]
    },
    "bin": "PartAssist.exe",
    "shortcuts": [
        [
            "PartAssist.exe",
            "AOMEI Partition Assistant Standard"
        ]
    ],
    "checkver": {
        "url": "https://www.disk-partition.com/download-home.html",
        "regex": " \\| v([\\d+.]+)<"
    },
    "autoupdate": {
        "url": "http://www2.aomeisoftware.com/download/pa/PAssist_Std.exe"
    }
}
