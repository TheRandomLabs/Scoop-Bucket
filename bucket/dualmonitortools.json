{
    "homepage": "http://dualmonitortool.sourceforge.net/",
    "description": "A utility for Windows users with dual or multiple monitor setups.",
    "license": "GPL-3.0-only",
    "version": "2.7",
    "url": "https://sourceforge.net/projects/dualmonitortool/files/dualmonitortool/2.7/DualMonitorTools-2.7.zip",
    "hash": "sha1:3f36099857c08349944dfa3016a65385d8844fc6",
    "bin": "DMT.exe",
    "shortcuts": [
        [
            "DMT.exe",
            "Dual Monitor Tools"
        ]
    ],
    "persist": [
        "DmtMagicWords.xml",
        "DmtSettings.xml"
    ],
    "pre_install": [
        "New-Item -Path \"$dir\\DmtMagicWords.xml\" -ItemType File | Out-Null",
        "New-Item -Path \"$dir\\DmtSettings.xml\" -ItemType File | Out-Null"
    ],
    "checkver": "Dual Monitor Tools is ([\\d.]+)",
    "autoupdate": {
        "url": "https://sourceforge.net/projects/dualmonitortool/files/dualmonitortool/$version/DualMonitorTools-$version.zip"
    }
}
